<% content_for(:html_title) { t('スペース設定') } %>

<%= render '/users/shared/error_messages', resource: @space %>

<ul class="nav nav-tabs mb-2">
  <li class="nav-item">
    <%= link_to t('スペース'), space_path(code: @space.code), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <a data-mdb-toggle="tab" class="nav-link active"><%= t('スペース設定') %></a>
  </li>
</ul>

<div class="card card-body mb-2" style="max-width: 850px">
  <div class="card-text mb-3"><%= render 'edit' %></div>
<% unless @space.destroy_reserved? %>
  <div class="row">
    <div class="col">
      <div class="card-footer pb-0 px-0">
        <nav class="mt-2 mb-0">
          <%= link_to t('スペース削除'), delete_space_path(code: @space.code) %>
        </nav>
      </div>
    </div>
  </div>
<% end %>
</div>
