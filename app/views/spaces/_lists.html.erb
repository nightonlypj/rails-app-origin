<div class="table-responsive">
  <table class="table table-hover table_spaces">
    <tbody>
<% @spaces.each do |space| %>
      <tr class="align-middle<%= ' row_inactive' if space.destroy_reserved? %>">
        <%# 名称 %>
        <td scope="row" class="px-1 py-2" style="width: 35%">
          <%= image_tag space.image_url(:small), class: 'rounded-circle' %>
          <%= link_to text_truncate(space.name, 64), space_path(code: space.code) %>
          <%= render 'icon', space: space, current_member: @members[space.id] %>
        </td>
        <%# 説明 %>
        <td class="px-1 py-2">
          <%= text_truncate(space.description, 128) %>
        </td>
        <%# (アクション) %>
        <td class="px-1 py-2">
<% if @members[space.id].present? %>
          <a href="<%= members_path(space_code: space.code) %>" class="btn btn-primary btn-sm">
            <i class="fas fa-user-friends" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="<%= t('メンバー一覧') %>"></i>
          </a>
<% end %>
        </td>
      </tr>
<% end %>
    </tbody>
  </table>
</div>
