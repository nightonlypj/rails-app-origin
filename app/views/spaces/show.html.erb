<% content_for(:html_title) { @space.name } %>

<div class="card card-body mb-2">
  <h5 class="card-title mb-3">
    <div class="row">
      <div class="col">
        <%= image_tag @space.image_url(:medium), class: 'rounded-circle', width: '48px', height: '48px' %>
        <%= @space.name %>
        <%= render '/spaces/icon', space: @space, current_member: @current_member %>
      </div>
<% if @current_member.present? %>
      <div class="col-auto text-end ps-0">
        <a href="<%= members_path(space_code: @space.code) %>" class="btn btn-primary ps-3 pe-1">
          <i class="fas fa-user-friends fa-lg"></i>
          <%= t('メンバー') %>
          <span class="badge rounded-pill badge-notification bg-secondary" style="font-size: 0.8rem; top: -14px; left: -2px"><%= @member_count > 99 ? '99+' : @member_count %></span>
        </a>
<% if @current_member.power_admin? %>
        <a href="<%=  edit_space_path(code: @space.code) %>" class="btn btn-dark">
          <i class="fas fa-cog fa-lg"></i>
          <%= t('設定') %>
        </a>
<% end %>
      </div>
<% end %>
    </div>
  </h5>
<% if @space.description.present? %>
  <div class="card-text">
<% @space.description.split("\n").each do |value| %>
    <%= value %><br>
<% end %>
  </div>
<% end %>
</div>
