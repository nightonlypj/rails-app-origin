<% content_for(:html_title) { 'スペース' } %>

<div class="card card-body mb-2">
  <h5 class="card-title mb-3">スペース</h5>
  <div class="card-text">
    <%= render 'search' %>
  </div>
</div>

<div class="card card-body mb-2">
  <div class="card-text">
<% if @spaces.present? %>
    <div class="row">
      <div class="col-sm-5 d-flex align-items-center">
        <%= page_entries_info @spaces %>
      </div>
      <div class="col-sm-7">
        <div class="float-sm-end">
          <%= paginate @spaces %>
        </div>
      </div>
    </div>
<% end %>

<% if @spaces.blank? %>
    <hr/>
    <article>
      スペースが見つかりません。
      <hr/>
    </article>
<% else %>
    <hr class="my-2" />
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody>
<% @spaces.each do |space| %>
          <tr class="align-middle">
            <td scope="row" class="px-1 py-2" style="width: 35%">
              <%= image_tag space.image_url(:small), class: 'rounded-circle' %>
              <span class="fw-bolder ms-1">
                <%= link_to text_truncate(space.name, 64), space_path(space.code) %>
              </span>
              <%= render 'icon', space: space, current_member: @members[space.id] %>
            </td>
            <td class="px-1 py-2">
              <%= text_truncate(space.description, 128) %>
            </td>
            <td class="px-1 py-2">
<% if @members[space.id].present? %>
              <a href="<%= members_path(space.code) %>" class="btn btn-link btn-floating link-dark">
                <i class="fas fa-user-friends" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="メンバー"></i>
              </a>
<% end %>
            </td>
          </tr>
<% end %>
        </tbody>
      </table>
    </div>
<% end %>

    <div class="d-flex justify-content-center">
      <%= paginate @spaces %>
    </div>
  </div>
</div>
