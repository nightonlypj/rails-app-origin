<% content_for(:html_title) { 'スペース' } %>

<div class="card card-body mb-2">
  <h5 class="card-title mb-3">スペース</h5>
  <div class="card-text">
    <%= render 'search' %>
  </div>
</div>

<div class="card card-body mb-2">
  <div class="card-text">
<% if @spaces.present? %>
    <div class="row">
      <div class="col-sm-5 d-flex align-items-center">
        <%= page_entries_info @spaces %>
      </div>
      <div class="col-sm-7">
        <div class="float-sm-end">
          <%= paginate @spaces %>
        </div>
      </div>
    </div>
<% end %>

<% if @spaces.blank? %>
    <hr/>
    <article>
      スペースが見つかりません。
      <hr/>
    </article>
<% else %>
    <hr class="my-2" />
    <table class="table table-hover">
      <tbody>
<% @spaces.each do |space| %>
        <article>
          <tr>
            <td scope="row" style="width: 35%">
              <%= image_tag space.image_url(:small), class: 'rounded-circle' %>
              <span class="fw-bolder mx-1">
                <%= link_to text_truncate(space.name, 64), space %>
              </span>
<% if space.private %>
              <i class="fas fa-lock" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="非公開"></i>
<% end %>
<% if @members[space.id].present? %>
              <i class="fas <%= power_class_name(@members[space.id].power) %> mx-1" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="あなたは「<%= @members[space.id].power_i18n %>」です。"></i>
<% end %>
            </td>
            <td>
<% if space.destroy_reserved? %>
              <i class="fas fa-trash mx-1" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="<%= l(space.destroy_schedule_at.to_date) %>以降に削除される予定です。"></i>
<% end %>
              <%= text_truncate(space.description, 128) %>
            </td>
          </tr>
        </article>
<% end %>
      </tbody>
    </table>
<% end %>

    <div class="d-flex justify-content-center">
      <%= paginate @spaces %>
    </div>
  </div>
</div>
