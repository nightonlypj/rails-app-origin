<% content_for(:html_title) { t('スペース削除') } %>

<ul class="nav nav-tabs mb-2">
  <li class="nav-item">
    <%= link_to t('スペース'), space_path(code: @space.code), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <a data-mdb-toggle="tab" class="nav-link active"><%= t('スペース削除') %></a>
  </li>
</ul>

<div class="card card-body mb-2" style="max-width: 720px">
  <h5 class="card-title mb-3">
    <%= render 'title', space: @space, current_member: @current_member %>
  </h5>
  <div class="card-text mb-3">
    <p>
      <%= t('スペース削除メッセージ', days: Settings.space_destroy_schedule_days) %><br>
      <%= t('スペース削除補足') %>
    </p>
    <%= button_to t('削除'), destroy_space_path(code: @space.code), data: { turbo_confirm: t('スペース削除確認メッセージ') }, method: :post, class: 'btn btn-danger' %>
  </div>
  <div class="card-footer pb-0 px-0">
    <nav class="mt-2 mb-0">
      <%= link_to t('スペース設定'), edit_space_path(code: @space.code) %>
    </nav>
  </div>
</div>
