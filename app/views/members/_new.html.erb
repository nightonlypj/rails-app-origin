<% validate_enabled = @member.errors.any? %>
<%= form_with(model: @member, url: create_member_path(space_code: @space.code), html: { method: :post, novalidate: true, autocomplete: 'on' }, data: { turbo: false }) do |form| %>
  <div class="row">
    <div class="col-md-2 text-md-end">
      <%= form.label :emails, t('メンバー'), class: "form-label" %> <span style="color: red">*</span>
    </div>
    <div class="col-md-10">
      <div class="form-outline<%= input_size_class_name(@member, :emails) %>">
        <%= form.text_area :emails, rows: 5, class: "form-control#{validate_class_name(validate_enabled, @member, :emails)}" %>
        <%= form.label :emails, t('メールアドレス'), class: 'form-label', for: 'member_emails' %>
        <%= render '/users/shared/field_error_messages', messages: @member.errors[:emails] %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 text-md-end">
      <%= form.label :power, t('権限'), class: "form-label" %> <span style="color: red">*</span>
    </div>
    <div class="col-md-10">
      <div class="<%= input_size_class_name_vertical(validate_enabled, @member, :power) %>">
<% Member.powers.each_key do |key| %>
        <div class="form-check form-check-inline<%= validate_class_name(validate_enabled, @member, :power) %>">
          <%= form.radio_button :power, key, class: "form-check-input#{validate_class_name(validate_enabled, @member, :power)}" %>
          <%= form.label key, Member.powers_i18n[key], class: 'form-check-label', for: "member_power_#{key}" %>
        </div>
<% end %>
        <%= render '/users/shared/field_error_messages', messages: @member.errors[:power] %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= form.submit t('招待'), type: 'button', onclick: 'submit()', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
