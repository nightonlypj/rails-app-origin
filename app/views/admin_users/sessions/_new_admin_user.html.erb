<%= form_with(model: resource, url: create_admin_user_session_path, html: { method: :post, novalidate: true, autocomplete: 'on' }, data: { turbo: false }) do |form| %>
  <div class="form-outline mb-3">
    <%= form.email_field :email, autocomplete: 'email', class: 'form-control' %>
    <%= form.label :email, t('メールアドレス'), class: 'form-label', for: 'admin_user_email' %>
  </div>

  <div class="form-outline mb-3">
    <%= form.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    <%= form.label :password, t('パスワード'), class: 'form-label', for: 'admin_user_password' %>
  </div>

<% if devise_mapping.rememberable? %>
  <div class="form-check mb-3">
    <%= form.check_box :remember_me, class: 'form-check-input' %>
    <%= form.label :remember_me, t('ログイン状態維持'), class: 'form-check-label', for: 'admin_user_remember_me' %>
  </div>
<% end %>

  <%= form.submit t('ログイン'), class: 'btn btn-primary' %>
<% end %>
