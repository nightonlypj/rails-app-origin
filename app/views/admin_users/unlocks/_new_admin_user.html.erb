<% validate_enabled = resource.errors.any? %>
<%= form_for(resource, as: resource_name, url: create_admin_user_unlock_path, html: { method: :post, novalidate: true }, local: true) do |form| %>
  <div class="form-outline<%= input_size_class_name(resource, :email) %>">
    <%= form.email_field :email, autocomplete: 'email', class: "form-control#{validate_class_name(validate_enabled, resource, :email)}" %>
    <%= form.label 'メールアドレス', class: 'form-label', for: 'admin_user_email' %>
    <%= render 'admin_users/shared/field_error_messages', messages: resource.errors[:email] %>
  </div>

  <%= form.submit '送信', class: 'btn btn-primary' %>
<% end %>
