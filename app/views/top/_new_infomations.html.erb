<% if @new_infomations.present? %>
<article class="card">
  <div class="card-body">
    <h5 class="card-title">新しいお知らせ</h5>
    <ul class="list-group">
<% @new_infomations.each do |new_infomation| %>
      <li class="list-group-item">
        <div>
          <span class="fw-bolder">
<% if new_infomation.body.present? %>
            <%= link_to new_infomation.title, new_infomation %>
<% else %>
            <%= new_infomation.title %>
<% end %>
          </span>
          (<%= l(new_infomation.started_at.to_date) %>)
        </div>
<% if new_infomation.summary.present? %>
        <div class="fw-light">
          <%= new_infomation.summary.html_safe %>
        </div>
<% end %>
      </li>
<% end %>
    </ul>
<% if @new_infomations.total_pages > 1 %>
    <p class="card-footer"><%= link_to 'もっと見る', infomations_path, class: 'btn btn-info' %></p>
<% end %>
  </div>
</article>
<% end %>
