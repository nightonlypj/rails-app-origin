<div class="card card-body">
  <h5 class="card-title mb-3">
    <div class="row">
      <div class="col d-flex align-items-center">
        <%= t('参加スペース') %>
      </div>
      <div class="col-auto text-end ps-0">
        <a href="<%= create_space_path %>" class="btn btn-dark text-nowrap">
          <i class="fas fa-folder-plus fa-lg"></i>
          <span class="ms-1"><%= t('作成') %></span>
        </a>
      </div>
    </div>
  </h5>
  <div class="card-text overflow-auto" style="max-height: 200px">
<% current_user.spaces.active.each do |space| %>
    <a href="<%= space_path(code: space.code) %>" class="btn btn-link d-flex align-items-center link-dark p-2">
      <%= image_tag space.image_url(:mini), class: 'rounded-circle' %>
      <span class="text-truncate mx-2 my-1" style="font-size: 0.8rem; text-transform: none"><%= space.name %></span>
    </a>
<% end %>
  </div>
</div>
