<div class="row">
<% unless user_signed_in? %>
  <div class="col-12 col-md-12 px-2 pb-2">
    <div class="card card-body">
      <h5 class="card-title mb-3">
        <%= t('サービス概要') %>
      </h5>
      <div class="card-text">
        <%= t('サービス説明') %><br>
        <%= t('リポジトリ') %>: <a href="https://dev.azure.com/nightonly/_git/rails-app-origin" target="_blank" rel="noopener noreferrer">https://dev.azure.com/nightonly/_git/rails-app-origin</a>
      </div>
    </div>
  </div>
<% end %>
  <div class="col-12 col-md-6 px-2 pb-2">
<% unless user_signed_in? %>
    <%= render 'sign_up' %>
<% else %>
    <%= render 'space' %>
<% end %>
    <div class="pt-2">
      <%= render 'public_space' %>
    </div>
  </div>
  <div class="col-12 col-md-6 px-2 pb-2">
    <%= render 'infomations' if @infomations.present? %>
  </div>
</div>
