  <div class="col-12 col-md-6 px-2 pb-2">
    <%= render 'sign_up' %>
  </div>
<% end %>
  <div class="col-12 col-md-6 px-2 pb-2">
    <%= render 'infomations' if @infomations.present? %>
  </div>
</div>
