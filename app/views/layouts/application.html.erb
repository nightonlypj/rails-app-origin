<!DOCTYPE html>
<html>
  <head>
    <title><%= t('app_name') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <h1><%= link_to t('app_name'), root_path %></h1>
    <ul>
<% if user_signed_in? %>
<% if current_user.destroy_reserved? %>
      <li><%= image_tag current_user.image_url(:small) %> <%= current_user.name %></li>
<% else %>
      <li><%= image_tag current_user.image_url(:small) %> <%= link_to current_user.name, edit_user_registration_path %></li>
<% end %>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
<% else %>
      <li><%= link_to "ログイン", new_user_session_path %></li>
      <li><%= link_to "アカウント登録", new_user_registration_path %></li>
<% end %>
    </ul>
    <hr/>
<% if destroy_reserved_message? %>
    <p class="alert">このアカウントは<%= l(current_user.destroy_schedule_at.to_date) %>以降に削除されます。<%= link_to '取り消しはこちら', users_undo_delete_path %></p>
<% end %>
<% if alert.present? %>
    <p class="alert"><%= alert %></p>
<% end %>
<% if notice.present? %>
    <p class="notice"><%= notice %></p>
<% end %>

<%= yield %>

    <hr/>
    <p>Copyright &copy; <%= link_to t('my_name'), t('my_url'), target: :_blank, rel: [:noopener, :noreferrer] %> All Rights Reserved.</p>
<% if Rails.env.development? %>
    <hr/>
    <ul>
      <li><%= link_to '[LetterOpenerWeb]', letter_opener_web_path %></li>
      <li><%= link_to '[ActionMailer Preview]', '/rails/mailers' %></li>
    </ul>
<% end %>
  </body>
</html>
