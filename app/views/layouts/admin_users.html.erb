<!DOCTYPE html>
<html>
  <head>
    <title><%= t('app_name') %> Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <h1><%= link_to "#{t('app_name')} Admin", new_admin_user_session_path %></h1>
    <hr/>
<% if alert.present? %>
    <div class="card text-white bg-danger mb-3">
      <div class="card-body">
        <p class="card-text"><%= alert %></p>
      </div>
    </div>
<% end %>
<% if notice.present? %>
    <div class="card text-body bg-info mb-3">
      <div class="card-body">
        <p class="card-text"><%= notice %></p>
      </div>
    </div>
<% end %>

<%= yield %>

<% if Rails.env.development? %>
    <hr/>
    <ul>
      <li><%= link_to '[LetterOpenerWeb]', letter_opener_web_path %></li>
      <li><%= link_to '[ActionMailer Preview]', '/rails/mailers' %></li>
    </ul>
<% end %>
  </body>
</html>
