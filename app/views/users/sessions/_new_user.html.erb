<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: true }, local: true) do |form| %>
  <div class="form-outline mb-3">
    <%= form.email_field :email, autocomplete: 'email', class: 'form-control' %>
    <%= form.label 'メールアドレス', class: 'form-label', for: 'user_email' %>
  </div>

  <div class="form-outline mb-3">
    <%= form.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    <%= form.label 'パスワード', class: 'form-label', for: 'user_password' %>
  </div>

<% if devise_mapping.rememberable? %>
  <div class="form-check mb-3">
    <%= form.check_box :remember_me, class: 'form-check-input' %>
    <%= form.label :remember_me, class: 'form-check-label', for: 'user_remember_me' %>
  </div>
<% end %>

  <%= form.submit 'ログイン', class: 'btn btn-primary' %>
<% end %>
