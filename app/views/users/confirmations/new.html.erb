<% content_for(:html_title) { t('メールアドレス確認') } %>

<%= render '/users/shared/alert_messages', messages: resource.errors[:confirmation_token] %>
<%= render '/users/shared/error_messages', resource: resource unless resource.errors[:confirmation_token].any? %>

<div class="card card-body mb-2" style="max-width: 480px">
  <h5 class="card-title mb-3"><%= t('メールアドレス確認') %></h5>
  <div class="card-text mb-3"><%= render 'new_user' %></div>
  <div class="card-footer pb-0 px-0"><%= render '/users/shared/links', action: 'confirmation' %></div>
</div>
