<% content_for(:html_title) { t('パスワード再設定') } %>

<%= render '/users/shared/alert_messages', messages: resource.errors[:reset_password_token] %>
<%= render '/users/shared/error_messages', resource: resource unless resource.errors[:reset_password_token].any? %>

<div class="card card-body mb-2" style="max-width: 480px">
  <h5 class="card-title mb-3"><%= t('パスワード再設定') %></h5>
  <div class="card-text mb-3"><%= render 'edit_user' %></div>
  <div class="card-footer pb-0 px-0"><%= render '/users/shared/links', action: 'password' %></div>
</div>
