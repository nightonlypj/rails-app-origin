<%= render "users/shared/alert_messages", messages: resource.errors[:reset_password_token] %>

<h2>パスワード再設定メール送信</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource unless resource.errors[:reset_password_token].any? %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= render "users/shared/field_error_messages", messages: resource.errors[:email] %>
  </div>

  <div class="actions">
    <%= f.submit "送信" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
