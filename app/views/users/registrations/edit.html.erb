<% content_for(:html_title) { t('ユーザー情報') } %>

<%= render '/users/shared/error_messages', resource: resource %>

<div class="card card-body mb-2" style="max-width: 850px">
  <div class="row">
    <div class="col">
      <h5 class="card-title"><%= t('ユーザー情報') %></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 card-text" style="min-width: 256px">
      <%= render 'edit_image' %>
    </div>
    <div class="col-md-8 card-text">
      <%= render 'edit_user' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card-footer pb-0 px-0">
        <nav class="mt-2 mb-0">
          <%= link_to t('アカウント削除'), delete_user_registration_path %>
        </nav>
      </div>
    </div>
  </div>
</div>
