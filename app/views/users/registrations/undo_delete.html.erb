<% content_for(:html_title) { t('アカウント削除取り消し') } %>

<div class="card card-body mb-2" style="max-width: 640px">
  <h5 class="card-title mb-3"><%= t('アカウント削除取り消し') %></h5>
  <div class="card-text mb-3">
    <p>
      <%= t('アカウント削除取り消しメッセージ', destroy_schedule_at: l(current_user.destroy_schedule_at.to_date)) %><br>
<% if current_user.destroy_requested_at.present? %>
      <%= t('アカウント削除取り消し補足', destroy_requested_at: l(current_user.destroy_requested_at)) %>
<% end %>
    </p>
    <%= button_to t('取り消し'), undo_destroy_user_registration_path, data: { turbo_confirm: t('アカウント削除取り消し確認メッセージ') }, method: :post, class: 'btn btn-primary' %>
  </div>
</div>
