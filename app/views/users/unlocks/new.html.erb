<%= render 'users/shared/alert_messages', messages: resource.errors[:unlock_token] %>

<h2>アカウントロック解除メール再送</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, local: true) do |form| %>
  <%= render 'users/shared/error_messages', resource: resource unless resource.errors[:unlock_token].any? %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: 'email' %>
    <%= render 'users/shared/field_error_messages', messages: resource.errors[:email] %>
  </div>

  <div class="actions">
    <%= form.submit '送信' %>
  </div>
<% end %>

<%= render 'users/shared/links' %>
