<% content_for(:html_title) { t('ダウンロード') } %>

<%= render '/users/shared/error_messages', resource: @download %>

<ul class="nav nav-tabs mb-2">
<% if @model == :member %>
  <li class="nav-item">
    <%= link_to t('スペース'), space_path(code: @space.code), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to t('メンバー一覧'), members_path(space_code: @space.code), class: 'nav-link' %>
  </li>
<% end %>
  <li class="nav-item">
    <a data-mdb-toggle="tab" class="nav-link active"><%= t('ダウンロード') %></a>
  </li>
</ul>

<div class="card card-body mb-2" style="max-width: 720px">
<% if @space.present? %>
  <h5 class="card-title mb-3">
    <%= render '/spaces/title', space: @space, current_member: @current_member %>
  </h5>
<% end %>
  <div class="card-text mb-3"><%= render 'new' %></div>
</div>
