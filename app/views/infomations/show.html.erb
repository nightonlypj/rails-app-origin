<% content_for(:html_title) { (@infomation.label_i18n.present? ? "[#{@infomation.label_i18n}]" : '') + @infomation.title } %>

<div class="card card-body mb-2">
  <%# タイトル %>
  <h5 class="card-title mb-3">
    <%= render 'label', infomation: @infomation %>
    <span class="fw-bolder">
      <%= @infomation.title %>
    </span>
    <span>
      (<%= l(@infomation.started_at.to_date) %>)
    </span>
  </h5>
  <%# 本文, サマリー %>
  <div class="card-text mb-3">
<% if @infomation.body.present? %>
    <%= @infomation.body.html_safe %>
<% elsif @infomation.summary.present? %>
    <%= @infomation.summary.html_safe %>
<% end %>
  </div>
  <div class="card-footer pb-0 px-0">
    <nav class="mt-2 mb-0">
      <%= link_to t('一覧'), infomations_path %>
    </nav>
  </div>
</div>
